<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Obat1Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_row="0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:columnCount="1"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowWeight="0"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="3dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="15dp">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/obat_1"
                            android:layout_marginLeft="70dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DNURSE SINOCARE TWIST\nLANCET 28G BOX 50PCS"
                            android:justificationMode="inter_word"
                            android:textSize="30sp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Rp.38,800.00"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/calibri_bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnWeight="0"
                    android:layout_rowWeight="0"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="3dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="15dp"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Deskripsi"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="DNURSE SINOCARE TWIST LANCET merupakan jarum steril untuk membantu mengambil sampel untuk pengujian DNURSE GLUCOSE BLOOD METER yang cocok digunakan pada sebagian besar lancing device standar"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Kemasan"
                            android:textSize="24dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Box. 50 PCS"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/calibri_regular" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="start"
                            android:text="Perhatian Khusus"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="- Hanya untuk dipakai satu kali\n- Tidak untuk digunakan untuk berulang kali untuk 1 jarum\n- Jarum yang telah digunakan harus segera dibuang, dan tidak dapat digunakan untuk orang lain "
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                </GridLayout>

                <Button
                    android:id="@+id/tombol_pesan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="975dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:padding="15dp"
                    android:text="PESAN"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/calibri_bold"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>