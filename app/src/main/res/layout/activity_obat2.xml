<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Obat2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_row="0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:columnCount="1"
                android:rowCount="3">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowWeight="0"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="3dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="15dp">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="50dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/obat_4"
                            android:layout_marginLeft="70dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DIABETADEX STRIP 6 KAPSUL"
                            android:justificationMode="inter_word"
                            android:textSize="30sp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Rp.36,300.00"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/calibri_bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnWeight="0"
                    android:layout_rowWeight="0"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="3dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="15dp"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Deskripsi"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Diabetadex kapsul digunakan untuk pengobatan pada pasien diabetes tipe 2. Obat ini merupakan fitofarmaka yaitu obat tradisional yang teruji secara klinis. Diabetadex mengandung fraksi bioaktif kayu manis dan bungur."
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Indikasi / Kegunaan"
                            android:textSize="24dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:lineHeight="30sp"
                            android:justificationMode="inter_word"
                            android:text="Menurunkan kadar gula darah dengan cara memperbaiki kinerja hormon pengatur
                            gula darah sehingga pengambilan gula darah oleh sel tubuh menjadi normal"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/calibri_regular" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="start"
                            android:text="Kandungan Komposisi"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Mengandung DLBS3233 yaitu fraksi bioaktif dari Cinnamomum burmanii (Kayumanis) dan Lagerstroemia speciosa (Bungur/banaba)."
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="start"
                            android:text="Dosis"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="1 kapsul perhari"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="start"
                            android:text="Cara Pemakaian"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Diminum sesuai dengan aturan pakai."
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="start"
                            android:text="Kemasan"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="1 strip @ 6 kapsul"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="7dp"
                            android:background="#cccccc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="start"
                            android:text="Cara Penyimpanan"
                            android:textSize="24dp"
                            android:textColor="@color/red_td"
                            android:fontFamily="@font/calibri_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="Simpan pada suhu kamar dibawah 30 C dan terlindung dari cahaya"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:lineHeight="30sp"
                            android:fontFamily="@font/calibri_regular"/>

                        <Button
                            android:id="@+id/tombol_pesan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="PESAN SEKARANG"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>