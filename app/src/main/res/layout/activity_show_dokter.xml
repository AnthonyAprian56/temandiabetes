<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDokterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="715dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_konsultasi" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/gambar_dokter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/lemon" />


            <RelativeLayout
                android:id="@+id/icon_kembali_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:layout_below="@+id/back"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/online1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="115dp"
                android:layout_marginTop="145dp"
                android:src="@drawable/online" />

            <TextView
                android:id="@+id/nama_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:text="Herlina S.Gz.RD"
                android:textAlignment="center"
                android:textSize="25sp"
                android:fontFamily="@font/calibri_bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/spesialis_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="255dp"
                android:text="EDUKATOR GIZI"
                android:textSize="22sp"
                android:fontFamily="@font/calibri_regular"
                android:textColor="#525559"
                />

            <TextView
                android:id="@+id/status_dokter"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="290dp"
                android:text="Mohon maaf, untuk sementara ini Tenaga Kesehatan sedang tidak aktif"
                android:textAlignment="center"
                android:textSize="22sp"
                android:lineHeight="30dp"
                android:fontFamily="@font/calibri_bold"
                android:textColor="@color/red_td" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="390dp"
                android:src="@drawable/portfolio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="417dp"
                android:fontFamily="@font/calibri_regular"
                android:text="Pengalaman Kerja"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pengalaman_kerja_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="440dp"
                android:text="16 Tahun"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/calibri_bold"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="500dp"
                android:background="#D2D2D3"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="544dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/gender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="536dp"
                android:fontFamily="@font/calibri_regular"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jenis_kelamin_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="550dp"
