<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_list_pengingat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_row="0"
    android:layout_columnWeight="5"
    android:layout_rowWeight="5"
    android:layout_marginBottom="1dp"
    android:padding="20dp"
    android:layout_gravity="fill"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="20dp"
        android:layout_gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/red_pill"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nama_obat1"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:text="Sumagesic"
            android:textSize="22sp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_ubah"
            android:layout_width="74dp"
            android:layout_height="40dp"
            android:text="Ubah"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_hapus"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_hapus"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:text="Hapus"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/waktu_minum_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:text="08:30"
                android:textSize="20sp"
                android:textColor="#BDBDBD" />

            <TextView
                android:id="@+id/strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/waktu_minum_obat"
                android:layout_alignTop="@+id/waktu_minum_obat"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#BDBDBD"/>

            <TextView
                android:id="@+id/aturan_makan_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/strip"
                android:layout_alignTop="@+id/strip"
                android:layout_marginRight="40dp"
                android:text="Sesudah Makan"
                android:textSize="20sp"
                android:textColor="#BDBDBD"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/aturan_makan_obat"
                android:layout_alignTop="@+id/aturan_makan_obat"></Switch>

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>